{
  "name": "@iqai/prompt-weaver",
  "version": "1.0.1",
  "description": "A powerful template engine for building and rendering prompts with an extensible transformer system",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@9.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm run build && changeset publish"
  },
  "keywords": [
    "template",
    "engine",
    "prompt",
    "weaver",
    "transformer",
    "ai",
    "llm"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@standard-schema/spec": "^1.0.0",
    "handlebars": "^4.7.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@changesets/cli": "^2.27.9",
    "@types/handlebars": "^4.0.0",
    "@vitest/ui": "^4.0.15",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vitest": "^4.0.15"
  },
  "peerDependenciesMeta": {}
}
